{
  "manifest_version": 3,
  "name": "Math Agent",
  "version": "1.0",
  "description": "A Chrome extension to interact with Math Agent AI",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
